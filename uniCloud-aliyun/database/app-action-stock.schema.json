{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "签到的用户ID",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"stock_id": {
			"bsonType": "string",
			"description": "物品ID",
			"foreignKey": "app-stock._id"
		},
		"num": {
			"bsonType": "int",
			"description": "操作数量"
		},
		"action": {
			"bsonType": "int",
			"description": "操作类型  0 出库，1 入库，2 丢弃",
			"enum": [0, 1, 2]
		},
		"remark": {
			"bsonType": "string",
			"description": "备注"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "记录时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}