{
	"bsonType": "object",
	"required": [
		"name",
		"type",
		"sort"
	],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "记录名称"
		},
		"type": {
			"bsonType": "int",
			"description": "记录分类：0 记事 1 记账",
			"enum": [0, 1]
		},
		"sort": {
			"bsonType": "string",
			"description": "分类类型"
		},
		"icon": {
			"bsonType": "string",
			"description": "icon图标"
		},
		"user_id": {
			"bsonType": "string",
			"description": "自定义事务的用户ID",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		}
	}
}