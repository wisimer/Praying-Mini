{
  "bsonType": "object",
  "required": [],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "strength": {
      "bsonType": "int",
      "description": "力量，决定基础伤害"
    },
    "wisdom": {
      "bsonType": "int",
      "description": "智慧，决定伤害加成"
    },
    "agility": {
      "bsonType": "int",
      "description": "敏捷，决定伤害修正"
    },
    "can": {
      "bsonType": "int",
      "description": "罐头数量，用作愿力值",
      "defaultValue": 10
    },
    "coin": {
      "bsonType": "int",
      "description": "充值的金币值",
      "defaultValue": 1
    },
    "level": {
      "bsonType": "int",
      "description": "玩家等级"
    },
    "empirical": {
      "bsonType": "int",
      "description": "当前经验值"
    },
    "next_empirical": {
      "bsonType": "int",
      "description": "下一级所需经验值"
    },
    "achievement_id": {
      "bsonType": "string",
      "description": "成就id",
      "foreignKey": "app-achievement._id"
    },
    "pet_modal_id": {
      "bsonType": "string",
      "description": "首页宠物模型的url",
      "foreignKey": "app-pet-model._id"
    },
    "modal_bg_url": {
      "bsonType": "string",
      "description": "首页宠物模型背景的url"
    }
  }
}