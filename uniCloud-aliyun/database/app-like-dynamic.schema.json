{
	"bsonType": "object",
	"required": [
		"user_id"
	],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "参考`uni-id-users` 表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"dynamic_id": {
			"bsonType": "string",
			"description": "动态id",
			"foreignKey": "app-dynamic._id"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "记录时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}