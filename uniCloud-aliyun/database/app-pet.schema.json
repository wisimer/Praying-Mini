{
	"bsonType": "object",
	"required": ["user_id", "name", "breed"],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "auth.uid != null",
		"delete": "auth.uid != null"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "创建宠物的主人ID",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"name": {
			"bsonType": "string",
			"description": "宠物名称",
			"errorMessage": "请添加宠物名称"
		},
		"avatar": {
			"bsonType": "string",
			"description": "宠物头像"
		},
		"type": {
			"bsonType": "int",
			"description": "宠物类别：0 狗 1 猫 2 其他 ",
			"enum": [0, 1, 2],
			"defaultValue": 0
		},
		"sex": {
			"bsonType": "int",
			"title": "性别",
			"description": "宠物性别：0 女 1 男 ",
			"enum": [0, 1],
			"defaultValue": 1
		},
		"breed": {
			"bsonType": "string",
			"description": "品种",
			"errorMessage": "请选择宠物品种"
		},
		"neuter": {
			"bsonType": "int",
			"description": "是否绝育：0 是 1 否 ",
			"enum": [0, 1],
			"defaultValue": 0
		},
		"weight": {
			"bsonType": "double",
			"description": "体重"
		},
		"desc": {
			"bsonType": "string",
			"description": "简介"
		},
		"is_default": {
			"bsonType": "int",
			"description": "默认宠物：0 是 1 否 ",
			"enum": [0, 1],
			"defaultValue": 1
		},
		"birth_time": {
			"bsonType": "string",
			"description": "出生日期"
		},
		"home_time": {
			"bsonType": "string",
			"description": "到家日期"
		},
		"state": {
			"bsonType": "int",
			"description": "宠物状态：0 正常 1 去世",
			"enum": [0, 1],
			"defaultValue": 0
		},
		"last_msg": {
			"bsonType": "timestamp",
			"description": "最后一次聊天时间"
		},
		"create_time": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}